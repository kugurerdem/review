{
    "env": {
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "extends": "eslint:recommended",
    "rules": {
        "max-len": [2, 80],
        "indent": [2, 4],
        "linebreak-style": [2, "unix"],
        "quotes": [2, "single"],
        "semi": [2, "never"],
        "comma-dangle": [2, "always-multiline"],
        "no-unused-vars": 1,
        "object-curly-spacing": [2, "never"],
        "array-bracket-spacing": [2, "never"],
        "keyword-spacing": 2
    }
}
